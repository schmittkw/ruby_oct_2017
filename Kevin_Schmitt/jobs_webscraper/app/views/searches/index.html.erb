<h1>Find Your Next Job</h1>
<div class='row'>
    <div class='col-md-6'>
        <form class='form-group' action='<%= make_search_path %>' method='post'>
            <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
            <!-- Content  -->
            <div class="form-group">
                <input name='search[title]' type="content" id='content' class="form-control" placeholder="Job Title">
            </div>
            <div class="form-group">
                <input name='search[city]' type="content" id='content' class="form-control" placeholder="City">
            </div>
            <div class="form-group">
                <input name='search[state]' type="content" id='content' class="form-control" placeholder="State">
            </div>
            <%# <div class="form-group">
                <option name='search[state]' type="content" id='content' class="form-control" placeholder="State">
            </div> %>
            <div>
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>